{
  "$id": "https://raw.githubusercontent.com/AMRC-FactoryPlus/schemas/main/Common/Program-v1.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Program",
  "type": "object",
  "properties": {
    "Schema_UUID": {
      "const": "cd718143-7c04-4ae2-a5d1-2ce1b04310a0"
    },
    "Instance_UUID": {
      "description": "The unique identifier for this object. (A UUID specified by RFC4122).",
      "type": "string",
      "format": "uuid"
    },
    "Start_Time": {
      "$ref": "https://raw.githubusercontent.com/AMRC-FactoryPlus/schemas/main/Common/Time-v1.json"
    },
    "End_Time": {
      "$ref": "https://raw.githubusercontent.com/AMRC-FactoryPlus/schemas/main/Common/Time-v1.json"
    },
    "Cycle": {
      "Start_Time": {
        "$ref": "https://raw.githubusercontent.com/AMRC-FactoryPlus/schemas/main/Common/Time-v1.json"
      },
      "End_Time": {
        "$ref": "https://raw.githubusercontent.com/AMRC-FactoryPlus/schemas/main/Common/Time-v1.json"
      }
    },
    "File_Name": {
      "allOf": [
        {
          "$ref": "https://raw.githubusercontent.com/AMRC-FactoryPlus/schemas/main/Common/Metric-v1.json"
        },
        {
          "properties": {
            "Sparkplug_Type": {
              "enum": [
                "String"
              ]
            },
            "Documentation": {
              "default": "file_name"
            }
          }
        }
      ]
    },
    "Recipe": {
      "type": "object",
      "properties": {
        "Name": {
          "allOf": [
            {
              "$ref": "https://raw.githubusercontent.com/AMRC-FactoryPlus/schemas/main/Common/Metric-v1.json"
            },
            {
              "properties": {
                "Sparkplug_Type": {
                  "enum": [
                    "String"
                  ]
                },
                "Documentation": {
                  "default": "Recipe name"
                }
              }
            }
          ]
        },
        "Active_Step": {
          "allOf": [
            {
              "$ref": "https://raw.githubusercontent.com/AMRC-FactoryPlus/schemas/main/Common/Metric-v1.json"
            },
            {
              "properties": {
                "Sparkplug_Type": {
                  "enum": [
                    "UInt16LE",
                    "UInt16BE"
                  ]
                },
                "Documentation": {
                  "default": "Active Step of recipe"
                }
              }
            }
          ]
        }
      }
    }
  },
  "required": [
    "Schema_UUID",
    "Instance_UUID"
  ]
}