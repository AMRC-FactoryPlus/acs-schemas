{
  "$id": "https://raw.githubusercontent.com/AMRC-FactoryPlus/schemas/main/Sensors/Battery-v1.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Battery",
  "type": "object",
  "properties": {
    "Schema_UUID": {
      "const": "40a0a64c-83f2-4d03-a7d9-6abcc1b88397"
    },
    "Instance_UUID": {
      "description": "The unique identifier for this object. (A UUID specified by RFC4122).",
      "type": "string",
      "format": "uuid"
    },
    "Voltage": {
      "allOf": [
        {
          "$ref": "https://raw.githubusercontent.com/AMRC-FactoryPlus/schemas/main/Common/Metric-v1.json"
        },
        {
          "properties": {
            "Sparkplug_Type": {
              "enum": [
                "FloatLE",
                "FloatBE"
              ]
            },
            "Documentation": {
              "default": "The battery voltage"
            }
          }
        }
      ]
    },
    "Percentage_Full": {
      "allOf": [
        {
          "$ref": "https://raw.githubusercontent.com/AMRC-FactoryPlus/schemas/main/Common/Metric-v1.json"
        },
        {
          "properties": {
            "Sparkplug_Type": {
              "enum": [
                "FloatLE",
                "FloatBE"
              ]
            },
            "Documentation": {
              "default": "The battery percentage full"
            }
          }
        }
      ]
    },
    "Capacity": {
      "allOf": [
        {
          "$ref": "https://raw.githubusercontent.com/AMRC-FactoryPlus/schemas/main/Common/Metric-v1.json"
        },
        {
          "properties": {
            "Sparkplug_Type": {
              "enum": [
                "FloatLE",
                "FloatBE"
              ]
            },
            "Documentation": {
              "default": "Capacity in Ah"
            }
          }
        }
      ]
    },
    "Is_Charging": {
      "allOf": [
        {
          "$ref": "https://raw.githubusercontent.com/AMRC-FactoryPlus/schemas/main/Common/Metric-v1.json"
        },
        {
          "properties": {
            "Sparkplug_Type": {
              "enum": [
                "Boolean"
              ]
            },
            "Documentation": {
              "default": "Isbattey being charged"
            }
          }
        }
      ]
    }
  },
  "required": [
    "Schema_UUID",
    "Instance_UUID"
  ]
}