{
    "$id": "https://raw.githubusercontent.com/AMRC-FactoryPlus/schemas/main/Service/Service-v1.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Service Provider",
    "type": "object",
    "properties": {
        "Schema_UUID": {
            "const": "05688a03-730e-4cda-9932-172e2c62e45c"
        },
        "Instance_UUID": {
            "description": "The unique identifier for this object. (A UUID specified by RFC4122).",
            "type": "string",
            "format": "uuid"
        },
        "Device_Information": {
            "$ref": "https://raw.githubusercontent.com/AMRC-FactoryPlus/schemas/main/Common/Device_Information-v1.json"
        },

        "Service_UUID": {
            "description": "The UUID of the service this node provides.",
            "type": "string",
            "format": "uuid"
        },
        "Service_URL": {
            "description": "The URL of the service's API.",
            "type": "string",
            "format": "uri"
        },
        "Last_Changed": {
            "type": "object",
            "patternProperties": {
                "^[a-zA-Z_]+$": {
                    "description": "A change-notify channel for this service.",
                    "$comment": "The values here might be UUIDs or strings",
                    "type": "string"
                }
            }
        }
    },
    "required": [
        "Schema_UUID",
        "Instance_UUID"
    ]
}
